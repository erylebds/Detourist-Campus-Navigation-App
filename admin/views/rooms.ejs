<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Manage Rooms</title>
</head>
<body>
    <%- include('partials/sidebar') %>

    <div class="main-content">
        <div class="container-fluid">
            <h2>Manage Rooms</h2>
            <button class="btn btn-primary mb-3" onclick="openModal('add')">Add New Room</button>

            <table class="table table-bordered table-striped" id="roomsTable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Floor</th>
                        <th>Coords (X, Y)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% rooms.forEach(room => { %>
                    <tr id="row-<%= room.room_id %>"> 
                        <td>
                            <% if(room.image_path) { %> 
                                <img src="/<%= room.image_path %>" alt="Room Img" style="height: 50px; width: 50px; object-fit: cover;">
                            <% } else { %>
                                No Image
                            <% } %>
                        </td>
                        <td><%= room.name %></td>
                        <td><%= room.room_type %></td>
                        <td><%= room.floor_id %></td>
                        <td><%= room.x_coord %>, <%= room.y_coord %></td>
                        <td>
                            <button class="btn btn-sm btn-warning" 
                                onclick='openModal("edit", <%- JSON.stringify(room) %>)'>Edit</button>
                            <button class="btn btn-sm btn-danger" 
                                onclick="deleteRoom(<%= room.room_id %>)">Delete</button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="roomModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Add Room</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="roomForm" enctype="multipart/form-data">
                        <input type="hidden" id="roomId" name="id">
                        
                        <div class="mb-3">
                            <label>Room Name *</label>
                            <input type="text" class="form-control" name="name" id="name" required>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Floor Level *</label>
                                <select class="form-control" name="floor_id" id="floor_id" required>
                                    <option value="5">5th Floor</option>
                                    <option value="6">6th Floor</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Type</label>
                                <select class="form-control" name="room_type" id="room_type">
                                    <option value="classroom">Classroom</option>
                                    <option value="office">Office</option>
                                    <option value="lab">Lab</option>
                                    <option value="comfort_room">Comfort Room</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>X Coordinate *</label>
                                <input type="number" class="form-control" name="x_coord" id="x_coord" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Y Coordinate *</label>
                                <input type="number" class="form-control" name="y_coord" id="y_coord" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Room Image</label>
                            <input type="file" class="form-control" name="room_image" id="room_image" accept="image/*">
                            <small class="text-muted">Leave blank to keep existing image when editing.</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Save Room</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const modal = new bootstrap.Modal(document.getElementById('roomModal'));

        function openModal(mode, data = null) {
            document.getElementById('roomForm').reset();
            if (mode === 'edit' && data) {
                document.getElementById('modalTitle').innerText = 'Edit Room';
                document.getElementById('roomId').value = data.id;
                document.getElementById('name').value = data.name;
                document.getElementById('floor_id').value = data.floor_id;
                document.getElementById('room_type').value = data.room_type;
                document.getElementById('x_coord').value = data.x_coord;
                document.getElementById('y_coord').value = data.y_coord;
            } else {
                document.getElementById('modalTitle').innerText = 'Add Room';
                document.getElementById('roomId').value = '';
            }
            modal.show();
        }

        document.getElementById('roomForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Use FormData for File Uploads
            const formData = new FormData(this);
            const id = formData.get('id');
            const url = id ? '/admin/rooms/update' : '/admin/rooms/create';
            const method = id ? 'PUT' : 'POST';

            try {
                const response = await fetch(url, {
                    method: method,
                    body: formData // Fetch handles Content-Type automatically for FormData
                });

                const result = await response.json();

                if (response.ok) {
                    Swal.fire('Success', result.message, 'success').then(() => location.reload());
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (error) {
                console.error(error);
                Swal.fire('Error', 'Something went wrong', 'error');
            }
        });

        async function deleteRoom(id) {
            if (!confirm('Are you sure you want to delete this room?')) return;

            try {
                const response = await fetch(`/admin/rooms/delete/${id}`, { method: 'DELETE' });
                const result = await response.json();
                
                if (response.ok) {
                    document.getElementById(`row-${id}`).remove();
                    Swal.fire('Deleted!', result.message, 'success');
                } else {
                    Swal.fire('Error', result.message, 'error');
                }
            } catch (error) {
                Swal.fire('Error', 'Failed to delete', 'error');
            }
        }
    </script>
</body>
</html>