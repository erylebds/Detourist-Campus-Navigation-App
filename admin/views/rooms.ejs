<h1 class="section-title">Manage Rooms</h1>

<div class="card-box">
    <h2 id="formTitle">Add New Room</h2>

    <form id="roomForm" enctype="multipart/form-data">
        <input type="hidden" id="roomId" name="id">

        <div class="form-group">
            <label for="roomName">Room Name *</label>
            <input type="text" id="roomName" name="name" required placeholder="e.g., D501">
        </div>

        <div class="form-row" style="display: flex; gap: 20px;">
            <div class="form-group" style="flex: 1;">
                <label for="floor_id">Floor Level *</label>
                <select id="floor_id" name="floor_id" required>
                    <option value="4">4th Floor</option>
                    <option value="5">5th Floor</option>
                    <option value="6">6th Floor</option>
                </select>
            </div>
            <div class="form-group" style="flex: 1;">
                <label for="room_type">Type</label>
                <select id="room_type" name="room_type">
                    <option value="classroom">Classroom</option>
                    <option value="office">Office</option>
                    <option value="lab">Lab</option>
                    <option value="comfort_room">Comfort Room</option>
                    <option value="other">Other</option>
                </select>
            </div>
        </div>

        <div class="form-row" style="display: flex; gap: 20px;">
            <div class="form-group" style="flex: 1;">
                <label for="x_coord">X Coordinate *</label>
                <input type="number" id="x_coord" name="x_coord" required>
            </div>
            <div class="form-group" style="flex: 1;">
                <label for="y_coord">Y Coordinate *</label>
                <input type="number" id="y_coord" name="y_coord" required>
            </div>
        </div>

        <div class="form-group">
            <label for="room_image">Room Image</label>
            <input type="file" id="room_image" name="room_image" accept="image/*">
            <small style="display: block; margin-top: 5px; color: #666;">Leave blank to keep existing image when editing.</small>
        </div>

        <div class="form-actions" style="margin-top: 20px;">
            <button type="submit" class="btn-primary">Save Room</button>
            <button type="button" id="cancelBtn" class="btn-secondary" style="display: none; margin-left: 10px;">Cancel</button>
        </div>
    </form>
</div>

<div class="card-box">
    <h2>Existing Rooms</h2>

    <table class="admin-table" id="roomsTable">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Type</th>
                <th>Floor</th>
                <th>Coords (X, Y)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% rooms.forEach(room => { %>
            <tr data-id="<%= room.room_id %>">
                <td>
                    <% if(room.image_path) {
                        // --- IMAGE PATH FIX ---
                        // 1. Get the path from the database.
                        let imgSrc = room.image_path;
                        // 2. If it's an old path starting with 'admin/public/', remove that prefix.
                        //    This assumes the file is now in your project's 'public/' folder.
                        if (imgSrc.includes('admin/public/')) {
                            imgSrc = imgSrc.replace('admin/public/', '');
                        }
                        // 3. Ensure the path starts with a '/' so the browser loads it relative to the root.
                        if (!imgSrc.startsWith('/')) {
                            imgSrc = '/' + imgSrc;
                        }
                    %>
                    <img src="<%= imgSrc %>" alt="<%= room.name %>" style="height: 50px; width: 50px; object-fit: cover; border-radius: 4px;">
                    <% } else { %>
                    <span style="color: #999; font-style: italic;">No Image</span>
                    <% } %>
                </td>
                <td><strong><%= room.name %></strong></td>
                <td><%= room.room_type.replace('_', ' ') %></td>
                <td><%= room.floor_id %></td>
                <td><%= room.x_coord %>, <%= room.y_coord %></td>
                <td>
                    <a href="javascript:void(0);" class="edit-btn"
                       style="color: #3498db; text-decoration: none; font-weight: bold;"
                       data-id="<%= room.room_id %>"
                       data-name="<%= room.name %>"
                       data-floor="<%= room.floor_id %>"
                       data-type="<%= room.room_type %>"
                       data-x="<%= room.x_coord %>"
                       data-y="<%= room.y_coord %>"
                    >Edit</a>
                    |
                    <button class="delete-btn" data-id="<%= room.room_id %>"
                            style="color:#e74c3c; background:none; border:none; cursor:pointer; font-weight: bold;">
                        Delete
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener("DOMContentLoaded", function() {
    // Get references to form elements
    const form = document.getElementById('roomForm');
    const formTitle = document.getElementById('formTitle');
    const cancelBtn = document.getElementById('cancelBtn');
    const roomIdInput = document.getElementById('roomId');

    // ==================== 1. FORM SUBMISSION (Create & Update) ====================
    form.addEventListener('submit', async function(e) {
        e.preventDefault(); // Stop the normal form submission

        // Create FormData object to send files and text data
        const formData = new FormData(this);
        const id = formData.get('id');

        // Determine URL based on whether an ID exists
        const url = id ? '/admin/rooms/update' : '/admin/rooms/create';

        try {
            const response = await fetch(url, {
                method: 'POST',
                body: formData // fetch automatically sets the correct Content-Type for FormData
            });

            const result = await response.json();

            if (response.ok && result.success) {
                // Show success message
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: result.message,
                    timer: 1500,
                    showConfirmButton: false
                });
                // Reload page after a short delay to show changes
                setTimeout(() => window.location.reload(), 800);
            } else {
                Swal.fire('Error', result.message || 'Error saving room', 'error');
            }
        } catch (error) {
            console.error("Submission error:", error);
            Swal.fire('Error', 'A server error occurred.', 'error');
        }
    });

    // ==================== 2. EDIT BUTTON CLICK ====================
    document.querySelectorAll('.edit-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            // Change form title
            formTitle.innerText = 'Edit Room';

            // Populate form inputs with data from the button's data-attributes
            roomIdInput.value = this.dataset.id;
            document.getElementById('roomName').value = this.dataset.name;
            document.getElementById('floor_id').value = this.dataset.floor;
            document.getElementById('room_type').value = this.dataset.type;
            document.getElementById('x_coord').value = this.dataset.x;
            document.getElementById('y_coord').value = this.dataset.y;

            // Show the cancel button
            cancelBtn.style.display = 'inline-block';

            // Scroll up to the form so the user can see it
            form.scrollIntoView({ behavior: 'smooth', block: 'start' });
        });
    });

    // ==================== 3. CANCEL BUTTON CLICK ====================
    cancelBtn.addEventListener('click', function() {
        // Reset the form to its default state
        form.reset();
        // Clear the hidden ID
        roomIdInput.value = '';
        // Change title back to 'Add New Room'
        formTitle.innerText = 'Add New Room';
        // Hide the cancel button
        this.style.display = 'none';
    });

    // ==================== 4. DELETE BUTTON CLICK ====================
    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const id = this.dataset.id;
            const row = this.closest('tr');

            // Show confirmation alert
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            });

            // If user confirms deletion
            if (result.isConfirmed) {
                try {
                    const response = await fetch(`/admin/rooms/delete/${id}`, { method: 'DELETE' });
                    const data = await response.json();

                    if (response.ok && data.success) {
                        Swal.fire('Deleted!', data.message, 'success');
                        // Remove the table row from the DOM
                        row.remove();
                    } else {
                        Swal.fire('Error', data.message || 'Error deleting room', 'error');
                    }
                } catch (error) {
                    console.error("Deletion error:", error);
                    Swal.fire('Error', 'Failed to delete room.', 'error');
                }
            }
        });
    });
});
</script>